<Page
    x:Class="TaskManager.Client.WinUi.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
      <StackPanel HorizontalAlignment="Left" MaxWidth="600">
        <TextBlock Text="Регистрация" FontSize="24" Margin="0,0,0,20"/>
        <TextBox Header="Имя" Margin="0,0,0,10"/>
        <TextBox Header="Фамилия" Margin="0,0,0,10"/>
        <TextBox Header="Email" Margin="0,0,0,10"/>
        <PasswordBox Header="Пароль" Margin="0,0,0,10"/>
        <PasswordBox Header="Повторите пароль" Margin="0,0,0,10"/>
        <TextBox Header="Телефон" Margin="0,0,0,10"/>
        <Button Content="Зарегистрироваться" Margin="0,20,0,0"/>
        <RichTextBlock SelectionHighlightColor="Green">
          <Paragraph>
            Уже зарегистрированы? 
            <Hyperlink Click="LoginLinkClick">Войти</Hyperlink>
          </Paragraph>
        </RichTextBlock>
      </StackPanel>

    </Grid>
</Page>
