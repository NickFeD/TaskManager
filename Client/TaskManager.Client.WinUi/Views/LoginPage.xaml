<Page
    x:Class="TaskManager.Client.WinUi.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
      <StackPanel HorizontalAlignment="Left" MaxWidth="600">
            <TextBlock Text="Вход в систему" FontSize="24" Margin="0,0,0,20"/>
            <TextBox Name="email" Header="Имя пользователя" Margin="0,0,0,10"/>
            <PasswordBox Name="password" Header="Пароль" Margin="0,0,0,10"/>
            <Button Content="Войти" Click="LoginClick"/>
        <RichTextBlock SelectionHighlightColor="Green">
          <Paragraph>
            Еще не зарегистрированы?
                    <Hyperlink Click="RegisterLinkClick" >Создать аккаунт</Hyperlink>
          </Paragraph>
        </RichTextBlock>
        </StackPanel>
    </Grid>
</Page>
